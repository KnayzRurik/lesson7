<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:id="@+id/appNameView" android:layout_weight="70"
                android:gravity="center"
                android:textSize="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/update"
                android:id="@+id/updateButton" android:layout_weight="30"
                android:textSize="18dp"
                android:gravity="center" android:clickable="true" android:onClick="onReloadClickListener"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/channelList" android:layout_weight="10"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/add"
                android:id="@+id/addButton" android:layout_weight="50"
                android:textSize="16dp" android:clickable="true" android:onClick="onAddClickListener"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/settings"
                android:id="@+id/settingsButton" android:layout_weight="50"
                android:textSize="16dp" android:clickable="true" android:onClick="onSettingsClickListener"/>
    </LinearLayout>
</LinearLayout>

